<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Satellite.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" MinWidth="850" MinHeight="450" Width="850" Height="450"
        x:Class="Satellite.Views.HomePageWindow"
        Title="HomePageWindow"
        x:Name="ThisWindow">
    <Design.DataContext>
        <vm:HomePageVM/>
    </Design.DataContext>
    <Grid ColumnDefinitions="50,*" RowDefinitions="50,*">
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Grid.Row="0" Grid.Column="1" Height="30" Width="400" Text="{Binding Searchstring}"></TextBox>
            <Button Margin="10 0 0 0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Поиск" Command="{Binding SubmitSearch}" CommandParameter="{Binding ElementName=ThisWindow}"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Margin="0 0 10 0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Профиль" Command="{Binding OpenWindow}" CommandParameter="{Binding ElementName=ThisWindow}"/>
            <Button Margin="0 10 10 0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Избранное" Command="{Binding OpenWindow2}" CommandParameter="{Binding ElementName=ThisWindow}"/>
        </StackPanel>
        
        <ListBox Grid.Column="1" Grid.Row="1" Width="500" Height="300" Items="{Binding Solars}" SelectedItem="{Binding ObjectSolar}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Button HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0" Content="Избранное" Command="{Binding ElementName=ThisWindow, Path=AddToFavourites }" CommandParameter="{Binding }"/>
                            <TextBlock Text="{Binding englishName}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        
        
    </Grid>
</Window>


